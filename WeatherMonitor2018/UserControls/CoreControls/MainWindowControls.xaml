<UserControl x:Class="WeatherMonitor2018.UserControls.CoreControls.MainWindowControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherMonitor2018.UserControls.CoreControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="70">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Margin="0 0 10 0" Background="Transparent" Click="Minimize_Button_Click" Style="{DynamicResource FlatButtonStyle}">
                <Image Source="{DynamicResource win_minimize}" />
            </Button>
            <Button Background="Transparent" Click="Close_Button_Click" Style="{DynamicResource FlatButtonStyle}">
                <Image Source="{DynamicResource win_close}" />
            </Button>
        </StackPanel>  
    </Grid>
</UserControl>
