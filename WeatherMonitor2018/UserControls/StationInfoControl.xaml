<UserControl x:Class="WeatherMonitor2018.UserControls.StationInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherMonitor2018.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="280">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle2}"></Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <TextBox x:Name="stationIdText" IsReadOnly="True" Foreground="DarkGray" />
        <TextBox x:Name="ownerTextBox" IsReadOnly="True" Foreground="DarkGray" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBox Text="Hæð yfir sjó:" IsReadOnly="True" Foreground="DarkGray" />
            <TextBox x:Name="altitudeTextBox" IsReadOnly="True" Foreground="DarkGray" />
        </StackPanel>
    </StackPanel>
</UserControl>
