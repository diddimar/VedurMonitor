<Window x:Class="WeatherMonitor2018.DialogWindows.NoConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMonitor2018.DialogWindows"
        mc:Ignorable="d"
        Name="NoConnection"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="NoConnectionDialog" Height="150" Width="300">
    <StackPanel VerticalAlignment="Center" Width="290" >
        <TextBlock FontSize="18" Text="Not connected to internet!" TextAlignment="Center" Foreground="PaleVioletRed" Margin="5" />
        <TextBlock Text="Check your internet connection and press continue when a connection has been established." TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="5" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="QUIT" Click="Quit_Button_Click"  Style="{DynamicResource FlatButtonStyle}" Margin="15" />
            <Button Content="CONTINUE" Click="Continue_Button_Click" Style="{DynamicResource FlatButtonStyle}" Margin="15" />
        </StackPanel>
    </StackPanel>
</Window>
