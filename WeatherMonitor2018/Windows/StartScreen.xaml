<Window x:Class="WeatherMonitor2018.Windows.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMonitor2018.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None">

    <Grid>
        <Image Source="{StaticResource splash}" Stretch="Fill" />
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 80 50 0">
            <Label Foreground="White" x:Name="ProjectName" Content="VeðurVaktin" HorizontalAlignment="Right" FontSize="30" FontWeight="Bold"/>
            <Label Foreground="White" x:Name="Version" Content="Version 1.2" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
    
</Window>