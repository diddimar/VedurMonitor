<Window x:Class="WeatherMonitor2018.Windows.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMonitor2018.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="350" Height="200">

    <Grid>
        <Image Source="{StaticResource splash}" Stretch="Fill" />
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 120 10 0">
            <Label Foreground="White" Margin="0" Padding="0" x:Name="ProjectName" Content="VeðurVaktin" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
            <Label Foreground="White" Margin="0" Padding="0" x:Name="Version" Content="Version 1.2" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
    
</Window>